<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TouristSafetySystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/primary_background</item>
        <item name="colorSurface">@color/secondary_background</item>
        <item name="colorOnSurface">@color/primary_text</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
        
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
        
        <!-- Text input styles -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Custom button style -->
    <style name="Widget.MaterialComponents.Button.Custom" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <!-- Custom card style -->
    <style name="Widget.MaterialComponents.CardView.Custom" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Custom text input style -->
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/primary_color</item>
    </style>
</resources>
